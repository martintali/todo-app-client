<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    <input type="text" id="new-todo" placeholder="What needs to be done?" value={{newTitle}} onblur={{action "createOne" value="target.value"}}>
  </header>
  <section id="main">
    <ul id="todo-list">
      {{#each todos as |task|}}
        <li class={{if task.completed "completed"}}>
          <input type="checkbox" class="toggle" {{action "toggleCompleted" task}}>
          <label>{{task.name}}</label>
          <button class="destroy" {{action "delete" task}}/>
        </li>
      {{/each}}
    </ul>

    <input type="checkbox" id="toggle-all">
  </section>
  <footer id="footer">
    <span id="todo-count">
      <strong>{{remaining}}</strong> {{inflection}} left</span>
    <ul id="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        <a href="active">Active</a>
      </li>
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>
    <button id="clear-completed">
      Clear completed (1)
    </button>
  </footer>
</section>